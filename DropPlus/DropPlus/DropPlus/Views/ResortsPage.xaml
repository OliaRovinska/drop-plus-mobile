<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DropPlus.Views.ResortsPage"
             xmlns:controls="clr-namespace:DropPlus.Controls"
             Title="Довідник курортів">
    <ContentPage.Content>
        <StackLayout>
            <Frame BorderColor="Black" Margin="5, 5, 5, 0" x:Name="FilterFrame">
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                    <Label Text="Використати фільтр" FontSize="Large" TextColor="{StaticResource TextColor}"/>
                    <Image Source="add.png" HeightRequest="32" WidthRequest="32"/>
                </StackLayout>
            </Frame>
            <controls:ResortListView />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>