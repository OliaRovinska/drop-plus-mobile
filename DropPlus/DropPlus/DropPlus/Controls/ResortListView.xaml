<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DropPlus.Controls.ResortListView">
  <ContentView.Content>
      <StackLayout>
          <ListView ItemsSource="{Binding Resorts}">
              <ListView.ItemTemplate>
                  <DataTemplate>
                      <ViewCell>
                          <ViewCell.View>
                              <StackLayout>
                                    <Label Text="{Binding Location}" FontSize="18" />
                                </StackLayout>
                          </ViewCell.View>
                      </ViewCell>
                  </DataTemplate>
              </ListView.ItemTemplate>
            </ListView>
      </StackLayout>
  </ContentView.Content>
</ContentView>